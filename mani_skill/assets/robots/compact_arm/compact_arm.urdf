<?xml version="1.0" encoding="utf-8"?>
<robot name="compact_arm">

  <!-- =============================== MATERIALS =============================== -->
  <material name="Compact/Blue">
    <color rgba="0.2 0.4 0.8 1"/>
  </material>
  <material name="Compact/Silver">
    <color rgba="0.7 0.7 0.7 1"/>
  </material>
  <material name="Compact/Red">
    <color rgba="0.8 0.2 0.2 1"/>
  </material>

  <!-- ============================ BASE ============================= -->
  <link name="Base">
    <visual>
      <origin rpy="0 0 0" xyz="0.25 0 0.05"/>
      <geometry>
        <cylinder length="0.1" radius="0.08"/>
      </geometry>
      <material name="Compact/Blue"/>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0.25 0 0.05"/>
      <geometry>
        <cylinder length="0.1" radius="0.08"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="5.0"/>
      <origin rpy="0 0 0" xyz="0.25 0 0.05"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.015"/>
    </inertial>
  </link>

  <!-- ========================= 1. WAIST ROTATION ========================= -->
  <joint name="Rotation" type="revolute">
    <parent link="Base"/>
    <child link="Upper_Arm"/>
    <origin rpy="0 0 0" xyz="0.25 0 0.1"/>
    <axis xyz="0 0 1"/>
    <limit effort="80" lower="-3.14" upper="3.14" velocity="1.5"/>
  </joint>

  <link name="Upper_Arm">
    <visual>
      <origin rpy="0 0 0" xyz="0.15 0 0"/>
      <geometry>
        <box size="0.3 0.06 0.06"/>
      </geometry>
      <material name="Compact/Silver"/>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0.15 0 0"/>
      <geometry>
        <box size="0.3 0.06 0.06"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1.5"/>
      <origin rpy="0 0 0" xyz="0.15 0 0"/>
      <inertia ixx="0.003" ixy="0" ixz="0" iyy="0.02" iyz="0" izz="0.02"/>
    </inertial>
  </link>

  <!-- ======================== 2. SHOULDER PITCH ========================= -->
  <joint name="Shoulder" type="revolute">
    <parent link="Upper_Arm"/>
    <child link="Lower_Arm"/>
    <origin rpy="0 0 0" xyz="0.3 0 0"/>
    <axis xyz="0 1 0"/>
    <limit effort="60" lower="-2.0" upper="2.0" velocity="1.5"/>
  </joint>

  <link name="Lower_Arm">
    <visual>
      <origin rpy="0 0 0" xyz="0.125 0 0"/>
      <geometry>
        <box size="0.25 0.05 0.05"/>
      </geometry>
      <material name="Compact/Blue"/>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0.125 0 0"/>
      <geometry>
        <box size="0.25 0.05 0.05"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <origin rpy="0 0 0" xyz="0.125 0 0"/>
      <inertia ixx="0.002" ixy="0" ixz="0" iyy="0.015" iyz="0" izz="0.015"/>
    </inertial>
  </link>

  <!-- ========================== 3. ELBOW PITCH =========================== -->
  <joint name="Elbow" type="revolute">
    <parent link="Lower_Arm"/>
    <child link="Wrist"/>
    <origin rpy="0 0 0" xyz="0.25 0 0"/>
    <axis xyz="0 1 0"/>
    <limit effort="40" lower="-2.5" upper="2.5" velocity="2.0"/>
  </joint>

  <link name="Wrist">
    <visual>
      <origin rpy="0 0 0" xyz="0.04 0 0"/>
      <geometry>
        <box size="0.08 0.04 0.04"/>
      </geometry>
      <material name="Compact/Silver"/>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0.04 0 0"/>
      <geometry>
        <box size="0.08 0.04 0.04"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.3"/>
      <origin rpy="0 0 0" xyz="0.04 0 0"/>
      <inertia ixx="0.0005" ixy="0" ixz="0" iyy="0.0008" iyz="0" izz="0.0008"/>
    </inertial>
  </link>

  <!-- ======================== 4. WRIST ROLL ======================== -->
  <joint name="Wrist_Roll" type="revolute">
    <parent link="Wrist"/>
    <child link="Fixed_Jaw"/>
    <origin rpy="0 0 0" xyz="0.08 0 0"/>
    <axis xyz="1 0 0"/>
    <limit effort="20" lower="-1.57" upper="1.57" velocity="2.0"/>
  </joint>

  <link name="Fixed_Jaw">
    <visual>
      <origin rpy="0 0 0" xyz="0.03 0 -0.025"/>
      <geometry>
        <box size="0.06 0.015 0.015"/>
      </geometry>
      <material name="Compact/Red"/>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0.03 0 -0.025"/>
      <geometry>
        <box size="0.06 0.015 0.015"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <origin rpy="0 0 0" xyz="0.03 0 -0.025"/>
      <inertia ixx="2e-4" ixy="0" ixz="0" iyy="2e-4" iyz="0" izz="2e-4"/>
    </inertial>
  </link>

  <!-- ======================= 5. GRIPPER ======================== -->
  <joint name="Jaw" type="revolute">
    <parent link="Fixed_Jaw"/>
    <child link="Moving_Jaw"/>
    <origin rpy="0 0 0" xyz="0 0 0.05"/>
    <axis xyz="0 0 1"/>
    <limit effort="30" lower="0" upper="0.04" velocity="0.1"/>
  </joint>

  <link name="Moving_Jaw">
    <visual>
      <origin rpy="0 0 0" xyz="0.03 0 0"/>
      <geometry>
        <box size="0.06 0.015 0.015"/>
      </geometry>
      <material name="Compact/Red"/>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0.03 0 0"/>
      <geometry>
        <box size="0.06 0.015 0.015"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <origin rpy="0 0 0" xyz="0.03 0 0"/>
      <inertia ixx="2e-4" ixy="0" ixz="0" iyy="2e-4" iyz="0" izz="2e-4"/>
    </inertial>
  </link>

  <!-- ======================= GRIPPER TIP LINKS ======================== -->
  <joint name="Fixed_Jaw_tip_joint" type="fixed">
    <parent link="Fixed_Jaw"/>
    <child link="Fixed_Jaw_tip"/>
    <origin rpy="0 0 0" xyz="0.06 0 -0.025"/>
  </joint>

  <link name="Fixed_Jaw_tip">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <sphere radius="0.003"/>
      </geometry>
      <material name="Compact/Blue"/>
    </visual>
  </link>

  <joint name="Moving_Jaw_tip_joint" type="fixed">
    <parent link="Moving_Jaw"/>
    <child link="Moving_Jaw_tip"/>
    <origin rpy="0 0 0" xyz="0.06 0 0"/>
  </joint>

  <link name="Moving_Jaw_tip">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <sphere radius="0.003"/>
      </geometry>
      <material name="Compact/Blue"/>
    </visual>
  </link>

</robot>